<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bluno.Fragment.FragmentCustomize">

    <FrameLayout
        android:layout_marginTop="25dp"
        android:id="@+id/customize_framelayout"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_gravity="center">
    </FrameLayout>


    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:layout_gravity="center"
        app:palette="@drawable/line_spectrum"
        app:selector="@drawable/wheel" />


    <LinearLayout
        android:id="@+id/buttonlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/brushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_brush_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/pickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_colorize_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fillButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_format_color_fill_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_clear_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_save_white_24dp" />


    </LinearLayout>

</LinearLayout>
